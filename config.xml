<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wtr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Water Tracker</name>
    <description>
        An app to help track the volume of water filtered by your BRITA filter.
    </description>
    <author email="dakshkumargupta@gmail.com" href="linkedin.com/in/dakshgupta">
        Daksh Gupta
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-nativestorage" spec="~2.2.2" />
</widget>
